<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:layoutDirection">ltr</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/red</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColorHint">@android:color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- dark application theme. -->
    <style name="darkTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:layoutDirection">ltr</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1b202d</item>
        <item name="colorPrimaryDark">#1b202d</item>
        <item name="colorAccent">#1b202d</item>
        <!--     Our app's background changes to black when dark mode is activated -->
        <item name="android:textColor">@color/menuText</item>
        <!--     text and button color change to white to contrast with the app's background-->
        <item name="android:itemBackground">@color/menu</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:navigationBarColor">@color/chatBackground</item>
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background" tools:ignore="NewApi">@color/app_background</item>
        <item name="background">@color/app_background</item>
    </style>

    <!-- dark application theme. -->
    <style name="darkThemeRegistration" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layoutDirection">ltr</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1b202d</item>
        <item name="colorPrimaryDark">#1b202d</item>
        <item name="colorAccent">#1b202d</item>
        <!--     Our app's background changes to black when dark mode is activated -->
        <item name="android:textColor">@color/menuText</item>
        <!--     text and button color change to white to contrast with the app's background-->
        <item name="android:itemBackground">@color/menu</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:navigationBarColor">@color/app_background</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/TextAppearance.Widget.EditText">
        <item name="android:textColor">@color/editProfileEditTexts</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="EditTextStyleEdited" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SettingsDialog" parent="Theme.AppCompat.Light.Dialog.Alert"> <!-- Used for the buttons -->
        <item name="android:textStyle">bold</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@android:color/holo_red_dark</item>
        <!-- Used for the background -->
        <item name="android:background">#717172</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/buttonPositiveColor</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/buttonNegativeColor</item>
    </style>

    <style name="NeutralButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/buttonNegativeColor</item>
    </style>


    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <!-- Used for the background -->
        <item name="android:background">@color/app_background</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
    </style>


</resources>